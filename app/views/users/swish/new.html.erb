<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2"><%= controller_path.split('/').last.to_s.titleize %></h1>
</div>
<div class="row">
  <div class="col-md-12">
    <div id="app">
      <form action="#" @submit.prevent="run">
        <div class="form-group">
          <label for="text">URL</label>
          <div class="input-group">
            <input id="text" name="text" placeholder="example.com" type="text" v-model="url" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <label>Category (Optional) (Performance in auto selected)</label>
          <div>
            <div class="custom-control custom-checkbox custom-control-inline">
              <input name="category" v-model="categories" id="category_0" type="checkbox" class="custom-control-input" value="accessibility">
              <label for="category_0" class="custom-control-label">accessibility</label>
            </div>
            <div class="custom-control custom-checkbox custom-control-inline">
              <input name="category" v-model="categories" id="category_1" type="checkbox" class="custom-control-input" value="best-practices">
              <label for="category_1" class="custom-control-label">best-practices</label>
            </div>
            <div class="custom-control custom-checkbox custom-control-inline d-none">
              <input name="category" v-model="categories" id="category_2" type="checkbox" checked="checked" class="custom-control-input" value="performance">
              <label for="category_2" class="custom-control-label">performance</label>
            </div>
            <div class="custom-control custom-checkbox custom-control-inline">
              <input name="category" v-model="categories" id="category_3" type="checkbox" class="custom-control-input" value="pwa">
              <label for="category_3" class="custom-control-label">pwa</label>
            </div>
            <div class="custom-control custom-checkbox custom-control-inline">
              <input name="category" v-model="categories" id="category_4" type="checkbox" class="custom-control-input" value="seo">
              <label for="category_4" class="custom-control-label">seo</label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <button name="submit" type="submit" @click="run" class="btn btn-primary">Submit</button>
        </div>


        <h3>Result</h3>
        <div class="notification" id="result"></div>
      </form>

    </div>
  </div>
</div>