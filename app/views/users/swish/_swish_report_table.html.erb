<div class="table-responsive">
  <table class="table table-sm">
    <thead>
    <tr>
      <th> Created At</th>
      <th>Accessibility</th>
      <th>Performance</th>
      <th>PWA</th>
      <th>SEO</th>
      <th>Best-Practices</th>
      <th>First Contentful Paint</th>
      <th>First CPU Idle</th>
      <th>First Meaningful Paint</th>
      <th>Estimated Input Latency</th>
      <th>Time To Interactive</th>
      <th>Speed Index</th>
      <th>View Report</th>
    </tr>
    </thead>
    <% swish_reports.each do |swish_report| %>
      <tr>
        <th style="width: 6rem"><%= swish_report.created_at.to_formatted_s(:short) %></th>
        <td> <%= swish_report.accessibility %></td>
        <td> <%= swish_report.performance %></td>
        <td> <%= swish_report.pwa %></td>
        <td> <%= swish_report.seo %></td>
        <td> <%= swish_report.best_practices %></td>
        <td> <%= swish_report.first_contentful_paint %>s</td>
        <td> <%= swish_report.first_cpu_idle %>s</td>
        <td> <%= swish_report.first_meaningful_paint %>s</td>
        <td> <%= swish_report.estimated_input_latency %>s</td>
        <td> <%= swish_report.time_to_interactive %>s</td>
        <td> <%= swish_report.speed_index %></td>
        <td>
          <a href="https://googlechrome.github.io/lighthouse/viewer/?gist=<%= swish_report.gist_id %>" target="_blank">View</a>
        </td>
      </tr>
    <% end %>
  </table>
  <div class="collapse multi-collapse collapse-stats">

    <table class="table table-sm">
      <thead>
      <tr>
        <th> Statistic</th>
        <th>Accessibility</th>
        <th>Performance</th>
        <th>PWA</th>
        <th>SEO</th>
        <th>Best-Practices</th>
        <th>First Contentful Paint</th>
        <th>First CPU Idle</th>
        <th>First Meaningful Paint</th>
        <th>Estimated Input Latency</th>
        <th>Time To Interactive</th>
        <th>Speed Index</th>
      </tr>
      </thead>


      <% swish_reports_description.each do |key, value| %>
        <tr>
          <th>
            <%= key %>
          </th>
          <% value.each do |metric| %>
            <td><%= metric.round(2) %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>